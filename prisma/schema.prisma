generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  cpf       String   @db.VarChar(11)
  createdAt DateTime @default(now())
  wallets   String

  @@map("Users")
}

